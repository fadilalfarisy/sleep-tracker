<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous">
        </script>
    <title>Edit Track</title>
</head>

<body>
    <div class="container" style="width: 400px; margin-top: 50px;">
        <div class="text-center">

            <div class="card">
                <div class="card-body">

                    <h4>START</h4>

                    <h5>Date</h5>
                    <!-- format date -->
                    <label>DD / MM / YYYY</label>
                    <div style="margin-bottom: 20px;">
                        <!-- start day -->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=start.day%>" name="startDay" maxlength="2"
                            form="form-save">
                        <!-- start month -->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=start.month%>" name="startMonth"
                            maxlength="2" form="form-save">
                        <!-- start year-->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=start.year%>" name="startYear" maxlength="4"
                            form="form-save">
                    </div>

                    <h5>Time</h5>
                    <!-- format time -->
                    <label>HH : MM : SS</label>

                    <div style="margin-bottom: 20px;">
                        <!-- start hours-->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=start.hours%>" name="startHours"
                            maxlength="2" form="form-save">
                        <!-- start minutes-->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=start.minutes%>" name="startMinutes"
                            maxlength="2" form="form-save">
                        <!-- start seconds-->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=start.seconds%>" name="startSeconds"
                            maxlength="2" form="form-save">
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h4>STOP</h4>

                    <h5>Date</h5>
                    <!-- format date -->
                    <label>DD / MM / YYYY</label>
                    <div style="margin-bottom: 20px;">
                        <!-- stop day-->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=stop.day%>" name="stopDay" maxlength="2"
                            form="form-save">
                        <!-- stop month-->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=stop.month%>" name="stopMonth" maxlength="2"
                            form="form-save">
                        <!-- stop year-->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=stop.year%>" name="stopYear" maxlength="4"
                            form="form-save">
                    </div>

                    <h5>Time</h5>
                    <!-- format time -->
                    <label>HH : MM : SS</label>

                    <div style="margin-bottom: 20px;">
                        <!-- stop hours-->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=stop.hours%>" name="stopHours" maxlength="2"
                            form="form-save">
                        <!-- stop minutes-->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=stop.minutes%>" name="stopMinutes"
                            maxlength="2" form="form-save">
                        <!-- stop seconds-->
                        <input style="width: 50px; display: inline;" class="form-control form-control-sm" type="text"
                            aria-label=".form-control-sm example" value="<%=stop.seconds%>" name="stopSeconds"
                            maxlength="2" form="form-save">
                    </div>
                </div>
            </div>
        </div>

        <div class="text-end" style="margin-top: 10px;">
            <!-- cancel button -->
            <form action="/tracker" method="get" style="display: inline;">
                <button class="btn btn-danger" type="submit">Cancel</button>
            </form>
            <!-- save button -->
            <form action="/tracker-edit/<%=response.tracker_id%>" method="post" style="display: inline;" id="form-save">
                <button class="btn btn-primary" type="submit">Save</button>
            </form>
        </div>


    </div>

</body>

</html>